<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BillTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:BillTracker.Views"
    Shell.FlyoutBehavior="Flyout">
    <FlyoutItem Title="My Billers">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}"
                          Route="MainPage" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Add a New Biller">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:AddBillerPage}"
                          Route="AddBillerPage" />
        </Tab>     
    </FlyoutItem>
</Shell>
